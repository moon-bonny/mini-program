.classify-nav {
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  overflow: hidden;
  line-height: 88rpx;
  background-color: #fafafa;
  z-index: 100;
}
.classify-nav navigator{
  /*width: 100%;*/
  text-align: center;
}
.search-wrap {
  position: relative;
  width: 90rpx;
  margin-right: 20rpx;
}

.search-wrap icon {
  position: absolute;
  left: 50%;
  top : 50%;
  transform:translate(-50%, -50%);
}

.text-wrap {
  width: 562rpx;
}

.text-wrap scroll-view {
  width: 100%;
  height: 88rpx;
  white-space: nowrap;
}

.scroll-wrap {
  display: flex;
  width: auto;
  justify-content: center;
  align-items: center;
}

.text-wrap .on {
  position: absolute;
  left: calc(50% - 22rpx);
  bottom: 4rpx;
  width: 48rpx;
  height: 4rpx;
  background-color: #ffb700;
}

.classify-nav text {
  font-size: 30rpx;
  color: #333;
  line-height: 90rpx;
}

.text-wrap .item {
  position: relative;
  /*width: 144rpx;*/
  height: 90rpx;
  line-height: 90rpx;
  /*text-align: center;*/
  margin-right: 50rpx;
  display: inline-block;
}

.rectangle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 94rpx;
}

.rectangle image {
  width: 34rpx;
  height: 34rpx;
}

/*金融知识分类  */

.classification-bg {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 1001;
}

.classification {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
  z-index: 1002;
  background-color: #fff;
  border-top: 1rpx solid #e6e6e6;
}

.classification .item {
  width: 150rpx;
  height: 70rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  background-color: #f5f5f5;
  border-radius: 5rpx;
}

.classification .active {
  color: #fff;
  background-color: #ffb700;
}


