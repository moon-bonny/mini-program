.books-scroll-wrap {
  height: 100%;
  padding-top: 90rpx;
}

/*阅读人数*/
.reader-con{
  position: absolute;
  bottom: 30rpx;
}
.reader-icon{
  width: 24rpx;
  height: 22rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.reader-num{
  font-size: 24rpx;
  color: #999;
  vertical-align: middle;
}

/*听书*/
.books-scroll-wrap .books-item {
  position: relative;
  margin-left: 30rpx;
  padding: 30rpx 30rpx 30rpx 222rpx;
  min-height: 336rpx;
  border-bottom: 1rpx solid #ebebeb;
}

.books-scroll-wrap .books-item .books-pic {
  position: absolute;
  top: 30rpx;
  left: 0rpx;
  width: 192rpx;
  height: 278rpx;
  border-radius: 5rpx;
  box-shadow: 5px 5px 5px #f4f4f4;  
}

.books-scroll-wrap .books-item .books-title {
  margin-bottom: 20rpx;
  font-size: 34rpx;
  color: #333;
}

.books-scroll-wrap .books-item .books-company {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.books-scroll-wrap .books-item .books-desc {
  height: 76rpx;
  font-size: 26rpx;
  line-height: 38rpx;
  margin-bottom: 20rpx;
  color: #333;
}
.books-scroll-wrap .books-desc rich-text{
  line-height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}
.books-scroll-wrap .books-tag {
  display: inline-block;
  height: 34rpx;
  margin-right: 20rpx;
  padding: 0 10rpx;
  border: 1rpx solid #ff572a;
  border-radius: 5rpx;
  line-height: 34rpx;
  font-size: 20rpx;
  text-align: center;
  color: #ff572a;
}

/*声财课堂&金融知识&财经资讯*/
.info-item {
  margin-left: 30rpx;
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom: 1rpx solid #e6e6e6;
}
.info-item:last-child{
  border-bottom: 0;
}
.info-art-pic {
  position: relative;
  width: 212rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
  vertical-align: top;
  pointer-events: none;
}
.info-right{
  position: relative;
  display: inline-block;
  width: 66.25%;
  height: 120rpx;
  vertical-align: top;
  pointer-events: none;
}
.info-art-title {
  margin-bottom: 6rpx;
  color: #333;
  font-size: 34rpx;
  line-height: 40rpx;
  word-break:break-all;
}
.info-item .bottom-txt{
  position: absolute;
  bottom: 0;
  width: 100%;
}
.info-grey-txt{
  color: #999;
  /*max-width: 50%;*/
  font-size: 24rpx;
  line-height: 30rpx;
  vertical-align: middle;
}
.info-grey-txt.source {
  width: 150rpx;
  text-align: right;
}
.bottom-right-con {
  display: inline-block;
  float: right;
}
.icon-clock{
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

/*标签*/
.lesson-label{
  position: absolute;
  left: 0;
  bottom: 0;
  height: 34rpx;
  padding: 0 10rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 0 17rpx 0 0;
  line-height: 34rpx;
  color: #fff;
  font-size: 20rpx;
}