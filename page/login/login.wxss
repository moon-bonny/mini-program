.login{
    padding: 90rpx 60rpx 0;
}
.login-title{
    display: block;
    margin-bottom: 20rpx;
    font-size: 52rpx;
    color: #333;
    font-weight: bold;
}

.des-txt{
    display: block;
    font-size: 24rpx;
    color: #ccc;
    margin-bottom: 90rpx;
}

.input-con{
    position: relative;
    margin-bottom: 30rpx;
    border-bottom: 1px solid #eeeff1;
}
.input-txt{
    display: inline-block;
    margin-right: 40rpx;
    vertical-align: middle;
    font-size: 34rpx;
    color: #333;
}
input{
    display: inline-block;
    width: 70%;
    height: 90rpx;
    vertical-align: middle;
    font-size: 34rpx;
    color: #333;
    line-height: 90rpx;
}
/*发送验证码*/
.send-code-btn{
    position: absolute;
    right: 0;
    top: 50%;
    transform: translate(0, -50%);
    display: inline-block;
    vertical-align: middle;
    color: #ffc72d;
    font-size: 34rpx;
}
/*已发送*/
.send-code-btn.send{
    color: #ccc;
}
.delete-btn{
    position: absolute;
    right: 0;
    top: 50%;
    transform: translate(0, -50%);
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
    background: url(data:image/png;base64,) no-repeat center;
    background-size: 28rpx;

}
.login-btn{
    height: 83rpx;
    margin-top: 90rpx;
    background: #ebebeb;
    border-radius: 40rpx;
    border-color: #ffc53b;
    line-height: 83rpx;
    color: #999;
    font-size: 34rpx;
    text-align: center;
    z-index: 999;
} 
.login-btn.act{
    background: #ffc53b;
    color: #fff;
}

/*底部logo*/
.bottom-con{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    text-align: center;
    margin-bottom: 100rpx;
}
.icon-logo{
    width: 58rpx;
    height: 53rpx;
    margin-right: 30rpx;
    vertical-align: middle;
}
.bottom-txt{
    color: #999;
    font-size: 32rpx;
    vertical-align: middle;
}