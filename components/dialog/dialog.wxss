.dialog-wrapper {
  position: fixed;
  left:0;
  top:0;
  width: 100%;
  height: 100%;
  z-index: 600;
}
.mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}
.dialog-box{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 560rpx;
  text-align: center;
}
.dialog-con{
  border-radius: 8rpx;
  background: #fff;
  /*text-align: center;*/
}
.dialog-con.margin{
  margin-top: -58rpx;
}
.dialog-top{
  padding: 60rpx 0 36rpx;
  border-bottom: 1rpx solid #d2d3d5;
}
.dialog-top.no-btn{
  border: none;
}
.dialog-title{
  margin-bottom: 30rpx;
  font-size: 36rpx;
  color: #000;
}
.dialog-content{
  padding: 0 36rpx;
  font-size: 30rpx;
  line-height: 44rpx;
  color: #333;
}
/*弹窗按钮*/
.confirm-btn, .cancel-btn{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  color: #ffb700;
}
.cancel-btn{
  display: inline-block;
  width: 50%;
  color: #000;
  border-right: 1px solid #d2d3d5;
  border-top-right-radius:0;
  border-bottom-right-radius: 0;
}
.confirm-btn.two-btn{
  display: inline-block;
  width: 50%;
}
/*关闭按钮*/
.cls-btn {
  margin: 50rpx auto 0;
  width: 66rpx;
  height: 66rpx;
}

/*答题竞赛样式*/
.dialog-wrapper.award-winning .confirm-btn {
  color: #3b3a3a;
}
.dialog-wrapper.award-winning .cancel-btn {
  color: #999;
}